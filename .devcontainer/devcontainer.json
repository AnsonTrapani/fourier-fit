{
  "name": "Fourier Fit DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/fourier_fit_dev",
  "workspaceMount": "source=${localWorkspaceFolder},target=/fourier_fit_dev,type=bind,consistency=cached",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "containerEnv": {
    "SHELL": "/bin/bash"
  },
  // "mounts": [
  //   "source=${localEnv:HOME}/.ssh/id_ed25519_sign.pub,target=${localEnv:HOME}/.ssh/id_ed25519_sign.pub,type=bind,readonly"
  // ],
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "ms-python.python",
        "ms-azuretools.vscode-containers"
      ],
      "settings": {
        "rust-analyzer.check.command": "clippy",
        "rust-analyzer.cargo.features": "all",
        "rust-analyzer.inlayHints.enable": true,
        "rust-analyzer.procMacro.enable": true,
        "editor.formatOnSave": true,
        "[rust]": {
          "editor.defaultFormatter": "rust-lang.rust-analyzer"
        }
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/setup_env.sh"
}